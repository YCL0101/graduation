/* CSS样式 */
page {
  background-color: rgba(71, 230, 230, 0.432);
  
}

.profile-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin-bottom: 10px;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.name-gender-birthday {
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin-bottom: 5px;
}

.username, .gender, .birthday {
  font-weight: bold;
}

.signature {
  font-style: italic;
  margin-bottom: 5px;
}

.region {
  color: #555;
}
