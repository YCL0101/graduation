.search {
  height: 60rpx;
  margin-top: 4rpx;
  background-color: white;
  /* border: 8rpx solid rgba(0, 0, 0, 0); */
  border-radius: 10rpx;
  margin-bottom: 40rpx;
}

.search input {
  align-items: center;
  /* text-align: center; */
  border-radius: 20rpx;
  border: 1px solid #ccc; /* 添加边框，1像素宽度，灰色颜色 */
  padding: 5px; 
}

.history,
.hot {
  margin-bottom: 20rpx;
}

.title {
  /* font-size: 18rpx; */
  font-weight: bold;
  margin-bottom: 10rpx;
}

.clearHistory {
  border-radius: 20rpx;
  font-size: 20rpx;
  background-color: #f5f5f5;
  margin-right: 20rpx;
}

.history-item,
.hot-item {
  display: inline-block;
  padding: 10rpx;
  background-color: #f5f5f5;
  border-radius: 20rpx;
  margin-right: 10rpx;
  /* 设置右边距，调整间距 */
  margin-bottom: 5rpx;
  cursor: pointer;
  white-space: nowrap;
  /* 防止文本换行 */
}
.scenic{
  display: flex;
  align-items: center;
  padding: 8rpx;
  border: 1px solid #ccc;
  border-radius: 20rpx;
  box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.3);
  margin-bottom: 20px;
}
.scenic image{
  width: 50%;
  height: 100px;
  border-radius: 20rpx;
  box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.3);
  /* 添加阴影效果 */
}
.scenic_i{
  width: 50%;
  height: 100px;
  display: flex;
  flex-direction: column;
  padding: 10rpx;
  overflow: hidden;
}
.post {
  border: 1px solid #ccc;
  padding: 10px;
  margin-bottom: 20px;
  border-radius: 20rpx;
  box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.3);
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.post-content {
  margin-top: 10px;
}
.title{
  font-size: 16px;
  /* 设置标题字体大小 */
  font-weight: bold;
  /* 设置标题字体粗细 */
  display: -webkit-box;
  /* 设置弹性盒子布局 */
  -webkit-box-orient: vertical;
  /* 设置弹性盒子垂直排列 */
  overflow: hidden;
  /* 隐藏溢出内容 */
  text-overflow: ellipsis;
  /* 使用省略号表示文本溢出 */
  -webkit-line-clamp: 1;
  /* 显示的行数，这里设置为1，表示只显示一行 */
  max-height: 1.2em;
  /* 行高，根据实际需求调整 */
}
.content{
  margin-top: 10rpx;
  /* 设置上外边距 */
  display: -webkit-box;
  /* 设置弹性盒子布局 */
  -webkit-box-orient: vertical;
  /* 设置弹性盒子垂直排列 */
  overflow: hidden;
  /* 隐藏溢出内容 */
  text-overflow: ellipsis;
  /* 使用省略号表示文本溢出 */
  -webkit-line-clamp: 3;
  /* 显示的行数，这里设置为1，表示只显示一行 */
  max-height: 4em;
  /* 行高，根据实际需求调整 */
}
.post-info {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.info-text {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.post-stats {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.post-stats image{
  width: 20px;
  height: 20px;
  padding:0 12rpx;
}

