.post-page {
  padding: 20rpx;
}

.input-container {
  height: 100%;
  margin-bottom: 20rpx;
}
.input{
  width: 100%;
  height: 80rpx;
  border-bottom: 1rpx solid #ccc;
  padding: 10rpx;
  box-sizing: border-box;
}
.content{
  width: 100%;
  height: auto;
  padding-bottom: 35px;
}
.upload-container {
  width: 100%;
  height: 35px;
  display: flex;
  position: fixed;
  bottom: 20rpx;
  background-color: white;
  padding-left: 5%;
}

.upload-container image {
  display: flex;
  max-width: 30px;
  max-height: 30px;
  padding-right: 20rpx;
}

.selected-files {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}
