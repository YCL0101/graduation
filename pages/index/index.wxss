  border-radius: 20rpx;
  box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.3);
  /* 添加阴影效果 */

}

.reMenIntroduce {
  width: 50%;
  height: 100px;
  display: flex;
  flex-direction: column;
  padding: 10rpx;
  overflow: hidden;
}

