.detailBox{
  display: flex;
  height: auto;
  flex-direction: column;
}
image{
  /* 使用 calc 函数可以在设置 width 时减去 margin 的值。 */
  width: calc(100% - 40rpx);
  height: 400rpx;
  margin: 20rpx;
  border-radius: 20rpx;
  box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.3);
}

.title {
  font-size: 30rpx; 
  /* 天气信息标题的样式 */
  font-weight:bold;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
}

.weather-info {
  width: calc(100%-20rpx);
  background-color: #f5f5f5;
  margin: 10rpx;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  /* 设置天气信息区域圆角 */
  box-shadow: 5px 5px 5px rgba(0, 0, 0, 0.1);
}

.weather-table {
  width: 100%;
}

.weather-row {
  display: flex;
  margin: 10rpx 30rpx;
  border-bottom: 1rpx solid #ddd;
}

.weather-cell {
  flex: 1;
  padding: 10rpx 0;
  color: #333; /* 文字颜色 */
  text-align: center; /* 文字水平居中 */
}
/* 拥挤度模块样式 */

.crowdedness-info {
  width: calc(100%-20rpx);
  margin: 10rpx;
  margin-bottom: 20rpx;
  margin-top: 10px;
  border-radius: 20rpx;
  /* 设置天气信息区域圆角 */
  box-shadow: 5px 5px 5px rgba(0, 0, 0, 0.1);
}

.crowdedness-table {
  display: block;
}

.crowdedness-row {
  display: flex;
  justify-content: space-between;
  padding: 5px 0;
}

.crowdedness-cell {
  width: 33%;
  text-align: center;
}

/* 根据拥挤度等级设置不同的单元格背景颜色 */
.crowdedness-cell.free {
  background-color: #98FB98; /* 空闲 - 鲜绿色 */
}

.crowdedness-cell.moderate {
  background-color: #FFD700; /* 适中 - 金色 */
}

.crowdedness-cell.busy {
  background-color: #FFA500; /* 繁忙 - 橙色 */
}

.crowdedness-cell.overloaded {
  background-color: #FF4500; /* 过载 - 橙红色 */
}



/* 功能区模块样式 */
.container {
  display: flex;
  flex-direction: row;
  padding-top: 40rpx;
}
.route {
  flex: 1;
  /* text-align: center; */
  display: flex;
  flex-direction: column; /* 设置为垂直方向排列 */
  align-items: center; /* 垂直居中 */
}

.icon {
  width: 30px;
  height:30px;
}



