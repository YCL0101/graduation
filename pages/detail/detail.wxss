.detailBox{
  display: flex;
  height: auto;
  flex-direction: column;
}
image{
  /* 使用 calc 函数可以在设置 width 时减去 margin 的值。 */
  width: calc(100% - 40rpx);
  height: 400rpx;
  margin: 20rpx;
  border-radius: 20rpx;
  box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.3);
}

.title {
  /* font-size: 40rpx; 天气信息标题的样式 */
  font-weight:bold;
  font-weight: bold;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.weather-info {
  width: calc(100%-20rpx);
  background-color: #f5f5f5;
  margin: 10rpx;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  /* 设置天气信息区域圆角 */
  box-shadow: 5px 5px 5px rgba(0, 0, 0, 0.3);
}

.weather-table {
  width: 100%;
}

.weather-row {
  display: flex;
  margin: 10rpx 30rpx;
  border-bottom: 1rpx solid #ddd;
}

.weather-cell {
  flex: 1;
  padding: 10rpx 0;
  color: #333; /* 文字颜色 */
  text-align: center; /* 文字水平居中 */
}

.container {
  display: flex;
  flex-direction: row;
}

.route {
  flex: 1;
  text-align: center;
}

.icon {
  width: 60px;
  height: 60px;
}

.title {
  margin-top: 10px;
}



